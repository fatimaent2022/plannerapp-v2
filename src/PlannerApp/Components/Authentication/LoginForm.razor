@namespace PlannerApp.Components

<EditForm Model="_model" OnValidSubmit="LoginUserAsync">

    <DataAnnotationsValidator /> @*This line will validate model before submit*@


    <MudCard>
        <MudCardHeader>
            <MudText Typo="Typo.h6">Welcome to Planner App V2.0</MudText>
        </MudCardHeader>
        <MudCardContent>

            <MudTextField Label="Email" HelperText="Required" @bind-Value="_model.Email" />
            <MudTextField InputType="InputType.Password" Label="Email" HelperText="Required" @bind-Value="_model.Password" />

            <ValidationSummary />
            @if (!string.IsNullOrEmpty(_errorMessage))
            {
                <MudAlert Severity="Severity.Error" Variant="Variant.Filled" Dense="true" Class="my-2">@_errorMessage</MudAlert>
            }


        </MudCardContent>

        <MudCardActions>
            <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Disabled="_isBusy">Login</MudButton>
            <MudButton Variant="Variant.Outlined" Color="Color.Secondary" Class="ml-1">Create Account</MudButton>
        </MudCardActions>

    </MudCard>


</EditForm>

